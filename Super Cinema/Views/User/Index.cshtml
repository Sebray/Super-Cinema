@model IEnumerable<Buisness.Interop.Data.UserDto>

@{ ViewData["Title"] = "Пользователи"; }

<br />

<h3>Пользователи</h3>

<hr />

<div class="container" style="border-radius: 5px">
    <div class="row" style="border-radius: 3px">
        
        <div class="col-3"><b>Логин</b></div>

        <div class="col align-self-end">
            <div align="right">
                @Html.ActionLink("Добавить", "Create", "User", null, new { @class = "btn btn-outline-primary" })
                @Html.ActionLink("Скачать отчёт", "GetXlsx", "User", null, new { @class = "btn btn-outline-primary" })
            </div>
        </div>
    </div>
    <hr />
</div>
@foreach (var item in Model)
{


    <div class="container" style="border-radius: 5px">
        <div class="row" style="border-radius: 3px">
            <div class="col-3">@item.Login
            </div>

            <div class="col align-self-end">
                <div align="right">
                    <div class="btn-group">
                        @Html.ActionLink("Редактировать", "Edit", new { item.Id }, new { @class = "btn btn-outline-secondary" })
                        @Html.ActionLink("Удалить", "Delete", new { item.Id }, new { @class = "btn btn-outline-danger" })
                        @Html.ActionLink("Подробно", "Details", new { item.Id }, new { @class = "btn btn-outline-secondary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
