@model IEnumerable<Buisness.Interop.Data.FilmDto>

@{ ViewData["Title"] = "Фильмы"; }

<br />

<h3>Фильмы</h3>

<hr />

<div class="container" style="border-radius: 5px">
    <div class="row" style="border-radius: 3px">

        <div class="col-3"><b>Название</b></div>

        <div class="col align-self-end">
            <div align="right">
                @Html.ActionLink("Добавить", "Create", "Film", null, new { @class = "btn btn-outline-primary" })

            </div>
        </div>
    </div>
    <hr />
</div>
@foreach (var item in Model)
{


<div class="container" style="border-radius: 5px">
    <div class="row" style="border-radius: 3px">
        <div class="col-3">@item.Name</div>

        <div class="col align-self-end">
            <div align="right">
                <div class="btn-group">
                    @Html.ActionLink("Редактировать", "Edit", new { item.Id }, new { @class = "btn btn-outline-secondary" })
                    @Html.ActionLink("Удалить", "Delete", new { item.Id }, new { @class = "btn btn-outline-danger" })
                    @Html.ActionLink("Подробно", "Details", new { item.Id }, new { @class = "btn btn-outline-secondary" })
                </div>
            </div>
        </div>
    </div>
</div>}
